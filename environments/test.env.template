# 费曼学习系统环境配置模板
# 复制此文件为 test.env 并填入您的实际配置

# ======================
# 基础配置
# ======================
ENVIRONMENT=development
DEBUG=true

# ======================
# API 服务配置
# ======================
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
API_WORKERS=1

# ======================
# OpenAI 配置 (必需)
# ======================
OPENAI_API_KEY="your-openai-api-key-here"
OPENAI_MODEL=gpt-4o
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000
OPENAI_TIMEOUT=30

# ======================
# 智谱AI 配置 (可选)
# ======================
ZHIPU_API_KEY="your-zhipu-api-key-here"
ZHIPU_MODEL=glm-4-plus

# ======================
# 工具API配置 (可选)
# ======================
TAVILY_API_KEY="your-tavily-api-key-here"
SERPAPI_API_KEY="your-serpapi-api-key-here"

# ======================
# 数据库配置
# ======================
# ChromaDB
CHROMADB_PERSIST_DIRECTORY=./chroma_db
CHROMADB_COLLECTION_NAME=feynman_memory

# Redis (可选)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=""

# ======================
# 监控与追踪配置 (可选)
# ======================
# LangChain追踪
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY="your-langchain-api-key-here"
LANGCHAIN_PROJECT="feynman-learning"

# LangFuse追踪
LANGFUSE_ENABLED=false
LANGFUSE_SECRET_KEY="your-langfuse-secret-key-here"
LANGFUSE_PUBLIC_KEY="your-langfuse-public-key-here"
LANGFUSE_HOST="https://cloud.langfuse.com"

# OpenTelemetry
TRACING_ENABLED=false
OTLP_ENDPOINT="http://localhost:4317"

# Prometheus监控
MONITORING_ENABLED=false
PROMETHEUS_PORT=9090

# ======================
# 安全配置
# ======================
SECRET_KEY="your-secret-key-for-session-management"
ALLOWED_HOSTS=localhost,127.0.0.1

# ======================
# 功能开关
# ======================
# 启用/禁用特定功能
ENABLE_WEB_SEARCH=true
ENABLE_IMAGE_SEARCH=true
ENABLE_KNOWLEDGE_GRAPH=true
ENABLE_MEMORY_CONSOLIDATION=true

# ======================
# 性能配置
# ======================
# 请求限制
REQUEST_TIMEOUT_SECONDS=300
MAX_REQUEST_SIZE_BYTES=10485760

# 并发控制
MAX_CONCURRENT_REQUESTS=10
RATE_LIMIT_PER_MINUTE=60

# 缓存配置
ENABLE_RESPONSE_CACHE=true
CACHE_TTL_SECONDS=3600
